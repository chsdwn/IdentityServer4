@using Microsoft.AspNetCore.Authentication

<header>
    <a href="/users/logout">Çıkış Yap</a>
    <a href="/users/getrefreshtoken/">Refresh Token Yenile</a>
</header>

<h1>@User.Identity.Name</h1>

<h2>Users Secret Page</h2>

<div>
    <h2>Claims</h2>
    <ul>
        @foreach (var claim in User.Claims)
        {
            <li>@claim.Type = @claim.Value</li>
        }
    </ul>
</div>

<div>
    <h2>Authentication</h2>
    <ul>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items) // Context = HttpContext
        {
            <li>@item.Key = @item.Value</li>
        }
    </ul>
</div>